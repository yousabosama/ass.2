#include <stdio.h>
float calculate(float a, float b, char op)
{
    switch(op)
{
        case '+': return a+b;
        case '-': return a-b;
        case '*': return a*b;
        case '/': return b!=0 ? a/b : 0;
        default: return -9999;
    }
}
int main(){
    float x,y;
    char op;
    scanf("%f %f %c",&x,&y,&op);
    printf("%.2f", calculate(x,y,op));
    return 0;
}
